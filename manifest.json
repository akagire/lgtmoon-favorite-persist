{
  "manifest_version": 3,
  "name": "LGTMoon Favorites Sync",
  "version": "1.0.0",
  "description": "Sync your LGTMoon favorites across devices.",
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "*://*.lgtmoon.dev/*",
    "*://*.lgtmoon.herokuapp.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.lgtmoon.dev/*",
        "*://*.lgtmoon.herokuapp.com/*"
      ],
      "js": ["content_script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
